@{
    Layout = "_Layout";
    ViewData["Title"] = "Добавление контакта";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
    <div class="container-fluid d-flex justify-content-between">
        <h1 class="text-center">Новый контакт</h1>
        <form class="d-flex ms-auto text-end">
            <div class="d-flex align-items-center">
                <a class="btn btn-outline-dark" aria-current="page" href="/Home">Домой</a>
            </div>
        </form>
    </div>
</nav>

<div class="row justify-content-center">
    <form action="~/Home/AddContact" method="post">
        <input class="form-control mb-3" type="text" name="secondName" placeholder="Фамилия" />
        <input class="form-control mb-3" type="text" name="firstName" placeholder="Имя" />
        <input class="form-control mb-3" type="text" name="middleName" placeholder="Отчество" />
        <input class="form-control mb-3" type="number" name="phoneNumber" placeholder="Номер телефона" />
        <input class="form-control mb-3" type="text" name="description" placeholder="Описание" />
        <button class="btn btn-outline-success" type="submit">Сохранить</button>
    </form>
</div>